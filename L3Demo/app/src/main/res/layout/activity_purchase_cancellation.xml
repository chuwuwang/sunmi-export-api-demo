<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_mode_payment"
        android:textColor="#999999"
        android:textSize="12sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="支付方式"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/back_card_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_card"
            android:checked="true"
            android:textSize="14dp"
            android:textColor="#000000"/>
        <RadioButton
            android:id="@+id/alipay_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alipay"
            android:textSize="14dp"
            android:textColor="#000000"/>
        <RadioButton
            android:id="@+id/wechat_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wechat"
            android:textSize="14dp"
            android:textColor="#000000"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_ori_voucher_no"
        android:textColor="#999999"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/input_ori_voucher_no_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:hint="@string/input_ori_voucher_no"
        android:textSize="14dp"/>
    <Button
        android:id="@+id/consume_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok"/>
</LinearLayout>