<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_consume"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_consume"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_revoke"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_consume_revoke"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_return_goods"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_return_goods"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_pre_auth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_pre_auth"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_settlement"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_settlement"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_sign"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_query_balance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_balance"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_system_manager"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_system_manager"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_print"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_print"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_query_merchant"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_query_merchant"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_sign_out"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_query_trade_online"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_query_trade_online"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_query_trade_local"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_query_trade_local"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_custom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/request_custom"
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>