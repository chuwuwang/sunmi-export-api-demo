<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户联追加打印"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_user_code_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户联追加二维码"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_merchant_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="商户联追加打印"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_merchant_code_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="商户联追加二维码"
        android:textColor="#000000"
        android:textColorHint="#666666"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/cb_code_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="二维码是否打印小票"
        android:textColor="#000000"
        android:textSize="14sp" />

</LinearLayout>