<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_trans_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_trans_type"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_payment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_payment_type"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_money"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_trans_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_trans_id"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_ori_voucher_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_ori_voucher_no"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_ori_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_ori_date"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_ori_reference_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_ori_reference_no"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_ori_auth_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_ori_auth_no"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_ori_qr_order_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_ori_qr_order_no"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_app_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_app_id"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户联追加打印"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_user_code_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户联追加二维码"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/input_merchant_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="商户联追加打印"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/input_merchant_code_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="商户联追加二维码"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/input_print_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="更改打印抬头文字"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_code_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="二维码是否打印小票"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_settle_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="结算是否打印小票"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_manage_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="是否输入管理员密码"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_last_trade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="是否为最后一笔"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="结算是否返回每一笔订单信息"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ok" />

    </LinearLayout>

</ScrollView>